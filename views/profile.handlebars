<div class="row">
  <div class="col-auto">
    <h2>Welcome, {{username}}!</h2>
  </div>
</div>

<div class="row mt-4">
  <div class="col-md-6">
    <h3>Create a New Blog Post:</h3>

    <form class="form new-blog-form" method="POST" action="/api/blog">
      <div class="form-group">
        <label for="blog-title">Blog Title:</label>
        <input class="form-input" type="text" id='blog-title' name="blog-title" />
      </div>
      <div class="form-group">
        <label for="blog-content">Enter New Blog:</label>
        <textarea class="form-input" id='blog-content' name="blog-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary">Create</button>
      </div>
    </form>
  </div>

  {{#if blog.length}}
  <div class="col-md-6 blog-list">
    <h3>Current Blogs:</h3>

    {{#each blog}}
    <div class="row mb-2">
      <div class="col-md-8">
        <h4><a href="/blog/{{this.id}}">{{this.title}}</a></h4>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id='{{this.id}}'>DELETE</button>
      </div>
      <form class="form new-comment-form" method="POST" action="/api/blog/:id/comments">
        <div class="form-group">
          <label for="comment-content">Enter Comment:</label>
          <textarea class="form-input" id="comment-content" name="comment-content"></textarea>
        </div>
        <div class="form-group">
          <button type="submit" class="btn btn-primary">Comment</button>
        </div>
      </form>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

<script src="/js/profile.js"></script>
