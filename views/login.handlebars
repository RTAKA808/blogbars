<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form" method="POST">
      <div class="form-group">
        <label for="username-login">username:</label>
        <input class="form-input" name="username" type="text" id='username-login' />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label>
        <input class="form-input" name="password" type="password" id='password-login' />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form" method="POST">
      <div class="form-group">
        <label for="username-signup">username:</label>
        <input class="form-input" name="username" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label>
        <input class="form-input" name="password" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>

<script src="/js/login.js"></script>
